; https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.yml]
indent_size = 2

[*.conf]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 4

[{Makefile,.gitmodules}]
indent_style = tab
indent_size = 4
